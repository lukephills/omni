{
	"compilerOptions": {
	"allowJs": false,
	"allowUnreachableCode": false,
	"declaration": false,
	"experimentalDecorators": true,
	"jsx": "preserve",
	"moduleResolution": "node",
	"noEmitHelpers": true,
	"newLine": "LF",
	"noImplicitAny": false,
	"noLib": false,
	"outDir": "build",
	"removeComments": false,
	"strictNullChecks": false,
	"sourceMap": false,
	"inlineSourceMap": false,
	"suppressImplicitAnyIndexErrors": false,
	"target": "es6",
    "types": ["mocha", "chai", "sinon"]
},
  "filesGlob": [
	"src/**/*.ts",
  "src/**/*.tsx",
  "typings/main.d.ts",
  "!./node_modules/**"
],
  "exclude": [
    "build",
    "dist",
    "config",
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "resolveGlobs": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}